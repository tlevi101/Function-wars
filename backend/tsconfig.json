{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "lib": ["ES2021"]
    },
    "exclude": ["node_modules", "dist"]
}
